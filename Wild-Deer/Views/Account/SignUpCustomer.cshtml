@model Customer
<form method="post">
    <div class="input-box">
        <label>First Name</label>
        <input type="text" placeholder="Enter Firstname" required  asp-for=FirstName/>
        <label>Last Name</label>
        <input type="text" placeholder="Enter Firstname" required asp-for="LastName"/>
    </div>

    <div class="input-box">
        <label>Username</label>
        <input type="text" placeholder="Enter Username" required asp-for="Username"/>
    </div>


    <input type="password" placeholder="Password" id="password" required asp-for="HashedPassword">
    <input type="password" placeholder="Confirm Password" id="confirm_password" required>





    <div id="captcha"></div>
    <input type="text" id="userInput" placeholder="Enter Captcha">
    <p id="result"></p>

    <div class="input-box">
        <label>Email Address</label>
        <input type="text" placeholder="Enter email address" required asp-for="Email"/>
    </div>

    <div class="input-box">
        <label>Phone Number</label>
        <input type="number" placeholder="Enter phone number" required asp-for="Phone"/>
    </div>

    <div class="input-box">
        <label>Birth Date</label>
        <input type="date" placeholder="Enter birth date" required asp-for="Birthday"/>
    </div>
    </div>

    <div class="input-filed">
        <label>Profile Picture</label>
        <input type="file" required asp-for="ProfileImage"/>
    </div>




    <div class="input-box address">
        <label>Address</label>
        <input type="text" placeholder="Enter Full Address" required asp-for="Adress"/>
    </div>
    <button type="submit" asp-controller="Account" asp-action="SignUpCustommerPost">Submit</button>
    <script src="~/js/captcha.js"></script>
</form>