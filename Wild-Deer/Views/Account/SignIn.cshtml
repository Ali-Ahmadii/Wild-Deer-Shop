@using Wild_Deer.Models.Dto
@{
    if(ViewData["Status"] == "Failed"){
        <h1>Not Correct!</h1>
    }
}
<form method="post">
    <h2>Login</h2>

    <input type="username" placeholder="Enter Your Username" required name="username"/>
        <i class="uil uil-envelope-alt email"></i>

        <input type="password" placeholder="Enter Your Password" required name="pass"/>

    <div id="captcha"></div>
    <input type="text" id="userInput" placeholder="Enter Captcha">
    <p id="result"></p>

        <span class="checkbox">
            <input type="checkbox" id="check" />
            <label for="check">Remember me</label>
        </span>

        <a href="#" class="forgot_pw">Forgot password?</a>

    <button class="button" type="submit" asp-controller="Account" asp-action="SignInPost">Login Now</button>

    <div class="login_signup">Don't have an account? <a href="/Account/SignUpSeller" id="signup">Signup Seller</a></div>
    <div class="login_signup">Don't have an account? <a href="/Account/SignUpCustomer" id="signup">Signup Customer</a></div>
    <script src="~/js/captcha.js"></script>
</form>